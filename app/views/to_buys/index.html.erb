<%- model_class = ToBuy -%>
<div class="page-header">
  <h1><%=t '.title', :default => ToBuy %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> 欲購買的餐點 </th>
      <th> 所屬餐廳 </th>
    </tr>
  </thead>
  <tbody>
    <% @to_buys.each do |to_buy| %>
      <tr>
        <td><%= to_buy.dish.name %></td>
        <td><%= to_buy.dish.restaurant.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

