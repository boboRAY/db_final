<h1>Listing restaurant_feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Restaurant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_feedbacks.each do |restaurant_feedback| %>
      <tr>
        <td><%= restaurant_feedback.content %></td>
        <td><%= restaurant_feedback.restaurant %></td>
        <td><%= restaurant_feedback.user %></td>
        <td><%= link_to 'Show', restaurant_feedback %></td>
        <td><%= link_to 'Edit', edit_restaurant_feedback_path(restaurant_feedback) %></td>
        <td><%= link_to 'Destroy', restaurant_feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant feedback', new_restaurant_feedback_path %>
